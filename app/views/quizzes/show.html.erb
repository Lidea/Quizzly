<p id="notice"><%= notice %></p>

<p>
  <strong>Subject:</strong>
  <%= @quiz.subject %>
</p>

<p>
  <strong>Question:</strong>
  <%= @quiz.question %>
</p>

<h3>Risposte</h3>


<ol>
	<% @quiz.answers.each do |a| %>
	<li> <%= a.text %>
		<% if a.correct? %>
		   (corretta)
		<% else %>
		   (sbagliata)   
		<% end %>
	</li>
	<% end %>
</ol>

<%= image_tag @quiz.image, size: "600x400" %>

<br>
<br>

<%= link_to 'Edit', edit_quiz_path(@quiz) %> |
<%= link_to 'Back', quizzes_path %>



